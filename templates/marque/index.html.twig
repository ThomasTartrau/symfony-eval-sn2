{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Marque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.Nom }}</td>
                <td>{{ marque.Description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_marque_show', {'id': marque.id}) }}">voir</a>
                    <a class="btn btn-primary" href="{{ path('app_marque_edit', {'id': marque.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune marque trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_marque_new') }}">Créer une nouvelle Marque</a>
    <a class="btn btn-secondary" href="{{ path('app_abat_jour_index') }}">Aller aux abat-jours</a>
{% endblock %}
